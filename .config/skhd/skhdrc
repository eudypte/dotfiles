#change focus
alt - left : yabai -m window --focus west
alt - down  : yabai -m window --focus south
alt - up    : yabai -m window --focus north
alt - right : yabai -m window --focus east

#switch window
shift + alt - left : yabai -m window --swap west
shift + alt - down : yabai -m window --swap south
shift + alt - up : yabai -m window --swap north
shift + alt - right : yabai -m window --swap east

#move window between spaces
alt - 1 : yabai -m window --space 1
alt - 2 : yabai -m window --space 2
alt - 3 : yabai -m window --space 3
alt - 4 : yabai -m window --space 4
alt - 5 : yabai -m window --space 5
alt - 6 : yabai -m window --space 6

#move window and split
ctrl + alt - left : yabai -m window --warp west
ctrl + alt - down : yabai -m window --warp south
ctrl + alt - up : yabai -m window --warp north
ctrl + alt - right : yabai -m window --warp east

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2


# resize windows
lctrl + shift - left : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
lctrl + shift - down : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
lctrl + shift - up : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
lctrl + shift - right : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0


#launch terminal
alt - return : open -n /Applications/Alacritty.app
